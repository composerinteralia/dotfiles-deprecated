confirm() {
    read -r -p "${1:-Are you sure? [y/N]} " response
    case "$response" in
        [yY][eE][sS]|[yY])
            true
            ;;
        *)
            false
            ;;
    esac
}

cd() { builtin cd "$@" && ls; }
mcd() { mkdir -p "$@" && eval cd "\"\$$#\""; }
prepend-path() { [ -d $1 ] && PATH="$1:$PATH"; }
